      <div class="ui stackable four column grid" style="margin: 50px 40px;">
          <% for(let p of farm.products) {%>

            
            <div class="ui card" style="margin:40px 40px; background-color: black; box-sizing: border-box;">
              <% if(p.images.length >= 1) {%> 
              <div class="ui slide masked reveal image">
                <a class="ui red ribbon label"><%= p.tag %> </a>  
                <img src="<%= p.images[0].url %> " class="visible content">
                <img src="<%= p.images[1].url %> " class="hidden content">
                <img src="<%= p.images[2].url %> " class="hidden content">
                <img src="<%= p.images[3].url %> " class="hidden content">
                <img src="<%= p.images[4].url %> " class="hidden content">   
              </div>
              <% } %> 
              <div class="content">
                <a class="header" href="/products/<%= p._id %> " style="color: #f50606;"><%= p.name %> </a>
                <div class="meta" style="margin-top: 5px; margin-bottom: 3px;">
                  <% let offer = 0 %>
                  <% let calcoffer = 0 %> 
                  <% offer =  p.saleprice - p.price  %> 
                  <% calcoffer = (offer * 100)/p.saleprice %> 
                  <p><span style=" color: #fff;">$<%= p.price %></span> <span style="color: rgb(150, 150, 150); text-decoration: line-through;">$<%= p.saleprice %></span> <span style="color: #d30000;"><%= calcoffer.toFixed(0) %>% off</span> </p>
                  <% if(currentUser && farm.author.equals(currentUser._id)) {%> 

                  <% }else {%> 
                    <form action="/products/<%= p._id %>/wishlist" method="POST">
                      <button class="ui labeled icon button ui  red button" style="text-align: center; margin-left: 27px; letter-spacing: 1px;">
                        <i class="fas fa-heart"></i>
                        Add To Wishlist
                      </button>                  
                    </form>                    
                      <form>
                        <button class="ui left attached ui orange button" style="float: left; margin-left: 10px; margin-top: 15px;letter-spacing: 1px;"><a href="/user/verify-acc-cart/<%= p._id %>/checkout" style="color: #fff;"><i class="fas fa-bolt"></i> Buy Now</a></button>
                      </form>
                      <form action="/products/<%= p._id %>/cart" method="POST">
                        <button class="ui right attached ui yellow button" style="margin-top: 15px; letter-spacing: 1px;"><i class="fas fa-cart-plus"></i> Add To Cart</button>
                      </form> 
                  <% } %> 
                    
                    
                  
                  
                </div>
              </div>
            </div> 
          </a> 
